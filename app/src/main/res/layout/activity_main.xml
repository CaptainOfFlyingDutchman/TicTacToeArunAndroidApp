<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#900"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#900"
        android:weightSum="95"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="RESET"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"></View>

            <TextView
                android:id="@+id/leader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="LEADERBOARD"/>





        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="98"
            android:orientation="horizontal"
            android:layout_weight="20">

            <Button
                android:id="@+id/move1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:text=""
                android:freezesText="true"
                android:textColor="#000"
                android:textSize="60sp"
                android:gravity="center"
                android:background="#900"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"></View>

            <Button
                android:id="@+id/move2"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:text=""
                android:freezesText="true"

                android:textColor="#000"
                android:textSize="60sp"
                android:gravity="center"
                android:background="#900"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"></View>
            <Button
                android:id="@+id/move3"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:text=""
                android:freezesText="true"

                android:textColor="#000"
                android:textSize="60sp"
                android:gravity="center"
                android:background="#900"/>








        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:background="#fff"></View>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="98"
            android:orientation="horizontal"
            android:layout_weight="20">

            <Button
                android:id="@+id/move4"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:text=""
                android:freezesText="true"

                android:textColor="#000"
                android:textSize="60sp"
                android:gravity="center"
                android:background="#900"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"></View>

            <Button
                android:id="@+id/move5"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:text=""
                android:freezesText="true"

                android:textColor="#000"
                android:textSize="60sp"
                android:gravity="center"
                android:background="#900"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"></View>
            <Button
                android:id="@+id/move6"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:text=""
                android:freezesText="true"

                android:textColor="#000"
                android:textSize="60sp"
                android:gravity="center"
                android:background="#900"/>








        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:background="#fff"></View>









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="98"
            android:orientation="horizontal"
            android:layout_weight="20">

            <Button
                android:id="@+id/move7"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:text=""
                android:freezesText="true"

                android:textSize="60sp"
                android:textColor="#000"
                android:gravity="center"
                android:background="#900"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"></View>

            <Button
                android:id="@+id/move8"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:text=""
                android:freezesText="true"

                android:textColor="#000"
                android:textSize="60sp"
                android:gravity="center"
                android:background="#900"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"></View>
            <Button
                android:id="@+id/move9"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:text=""
                android:freezesText="true"

                android:textSize="60sp"
                android:textColor="#000"
                android:gravity="center"

                android:background="#900"/>








        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/turn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Player X Move!"
                android:layout_weight="100"
                android:textColor="#fff"
                android:textSize="30sp"
                android:gravity="center"

                />


        </LinearLayout>













    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER X Wins!!"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:textColor="#fff"
        android:textSize="40sp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />



</RelativeLayout>